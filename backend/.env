# .env.example
APP_NAME=GraphLLM-Backend
DEBUG=true
DATABASE_URL=sqlite:///./graphllm.db

# LLM settings (provider-agnostic)
LLM_PROVIDER=openrouter
LLM_API_KEY=sk-XXXX
LLM_MODEL=meta-llama/llama-3.1-8b-instruct
LLM_TEMPERATURE=0.2
LLM_TOP_P=0.9
LLM_MAX_TOKENS=512
LLM_ENDPOINT_BASE=https://api.openrouter.ai/v1

# RAG defaults
RETRIEVER_TOP_K=5
RETRIEVER_HOPS=2
PROMPT_TEMPLATE_ID=default_rag

# Optional security
API_KEY_ENABLED=false
API_KEY=your-secret-key-here